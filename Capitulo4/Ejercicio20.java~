import java.util.InputMismatchException;
import java.util.Scanner;
import java.io.IOException;

public class Ejercicio20 {

    public static void main(String[] args) throws IOException {
	Scanner in = new Scanner(System.in);
	System.out.println("¿Cual es su nombre?");
	String nombre = in.nextLine();
	int edad = 0;
	Double peso = 0.0;
	boolean apagador = true;

	while(apagador) {
	    try {
		System.out.println("¿Cual es su edad?");
		edad = in.nextInt();
		if(edad < 2 || edad > 100) {
		    System.out.println("Ingresa una edad valida.");
		    apagador = true;
		} else
		    break;
	    } catch (InputMismatchException e) {
		System.out.println("Ingrese una edad valida.");
		apagador = true;
	    }
	    in.nextLine();// clears the buffer
	}

	while(apagador) {
	    try {
		System.out.println("Cual es su peso(Kg)?");
		peso = in.nextDouble();
		if(peso < 10 || peso > 150) {
		    System.out.println("Ingresa un peso adecuado.");
		    apagador = true;
		} else
		    break;
	    } catch (InputMismatchException e) {
		System.out.println("Ingrese su peso con decimas");
		apagador = true;		
	    }
	    in.nextLine();// clears the buffer
	}

	Ejercicio20 test = new Ejercicio20();
	Ejercicio20.etapa1();
    }

    public static String etapa1() {
	Scanner n = new Scanner(System.in);
	String respuesta;
	while(true) {
	    System.out.println("Tiene fiebre?");
	    respuesta = n.next();
	    System.out.println(respuesta);
	    if(respuesta == "no") {
		System.out.println("Informacion insuficiente");
		//break;
	    } else if(respuesta == "si") {
		System.out.println("Tos?");
		respuesta = n.next();
		etapa2(respuesta);
		//break;
	    } else{
		continue;
		System.out.println("hola");
		break;
	    }
	    //n.nextLine();
	}
	return respuesta;
    }

    public static void etapa2(String opcion) {
	Scanner in = new Scanner(System.in);
	String respuesta;
	while(true) {
	    if(opcion == "si") {
		while(true) {
		    System.out.println("¿Dificultad para respirar o" +
				       " tos con flemas");
		    respuesta = in.next();
		    if(respuesta == "si") {
			System.out.println("Posible neumonia o infeccion en " +
					   "las vias aereas");
			break;
		    } else if(respuesta == "no") {
			while(true) {
			    System.out.println("¿Dolor de cabeza?");
			    respuesta = in.next();
			    if(respuesta == "si") {
				System.out.println("Posible infeccion viral");
				break;
			    } else if(respuesta == "no") {
				etapa4();
				break;
			    } else
				continue;
			}
		    } else
			continue;
		}
	    } else if(opcion == "no") {
		etapa3();
	    } else
		continue;
	}
    }

    public static void etapa3() {
	Scanner in = new Scanner(System.in);
	String respuesta;
	System.out.println("¿Dolor de cabeza?");
	respuesta = in.next();
	if(respuesta == "no") {
	    etapa4();
	} else if(respuesta == "si") {
	    System.out.println("¿Nauseas, vomito, somnolencia o confusion?");
	    respuesta = in.next();
	    if(respuesta == "si") {
		System.out.println("Posible meningitis");
	    }else if(respuesta == "no") {
		System.out.println("¿Diarrea?");
		respuesta = in.next();
		if(respuesta == "no") {
		    etapa4();
		} else if(respuesta == "si") {
		    System.out.println("Posible infeccion en el tracto" +
				       " digestivo");
		}
	    }
	}
    }

    public static void etapa4() {
	Scanner in = new Scanner(System.in);
	String respuesta;
	System.out.println("¿Dolor de los huesos o de las articulaciones?");
    }
}
